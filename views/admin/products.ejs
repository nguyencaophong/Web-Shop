<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

    <body>
        <%- include('../includes/navigation.ejs') %>
                <% if (prods.length > 0) { %>
                    <div class="container-fluid">
                        <div class="row">
                            <% for (let product of prods) { %>
                            <div class="col-md-2">
                                    <article href="/products/<%= product._id %>" class="card product-item">
                                        <a href="/products/<%= product._id %>">
                                          <div class="card__image">
                                              <img src="/<%= product.imageUrl %>"
                                                  alt="<%= product.title %>"  style="width: 100%">
                                          </div>
                                        </a>

                                        <div class="card__actions">
                                            <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn btn-info">Edit</a>
                                            <button href="" id="delete-item" class="episode-item-icon btn btn-info" data-toggle="modal" data-target="#delete-items" data-id="<%= product._id %>" data-csrf="<%= csrfToken %>">Delete</button>
                                        </div>
                                    </article>
                                    
                                </div>
                                <% } %>
            <!-- UI verify Delete -->
           <div id="delete-items" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">WARRING !!!</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p>Are you sure you want to delete?</p>
                </div>
                <div class="modal-footer">
                  <button id="deleteItems" type="button" class="btn btn-danger">Delete</button>
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
                               
                        </div>
                    </div>
                    <% } else { %>
                                <h1>No Products Found!</h1>
                    <% } %>
                    <%- include('../includes/end.ejs') %>

 <!-- Form hidden delete Movie in Cart-->
 <form name="delete-form-items" method="POST">
    <input id="hidden-itemId" type="hidden"  name="itemId">
    <input id="hidden-csrf" type="hidden" name="_csrf" value="<%= csrfToken %>">
  </form>


