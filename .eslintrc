{
  "rules": {
    "eqeqeq": "off",
    "curly": "error",
    "quotes": ["error", "single"]
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },

  "env": {
    "es6": true
  },
  "overrides": [
    {
      "files": ["*-test.js","*.spec.js"],
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
